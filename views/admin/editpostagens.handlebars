{{#each erros}}



<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <i class="fas fa-exclamation-circle"></i>
    {{texto}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{else}}

{{/each}}

<h3 style="text-align:center" class="mb-3">Editar Categoria </h3>
<div class="card mb-5">
    <div class="card-body">

        <form action="/admin/postagem/edit" method="POST">

            <input type="hidden" name="id" value="{{postagem._id}}">


            <label for="tema"><b>Título:</b></label>
            <input type="text" placeholder="Digite o título" id="titulo" name="titulo" class="form-control mb-2"
                value="{{postagem.titulo}}">



            <label for="slug"><b>Slug:</b></label>
            <input type="text" placeholder="Digite o slug" id="slug" name="slug" class="form-control"
                value="{{postagem.slug}}">


            <label for="descricao"><b>Descrição:</b></label>
            <input type="text" placeholder="Digite a descrição" id="descricao" name="descricao" class="form-control"
                value="{{postagem.descricao}}">


            <label for="categoria"><b>Categoria:</b></label>



            <select id="categoria" class="custom-select " name="categoria">
                <div class="dropdown-menu">
                    <option value="" disabled selected>Selecione uma opção: </option>
                    {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>

                    {{else}}
                    <option value="0" class="dropdown-item">Sem categorias registradas</option>
                    {{/each}}

                </div>


            </select>



            <label for="conteudo" class="mt-3"><b>Conteúdo: </b></label>
            <textarea type="text" placeholder="O quê você está pensando hoje?   :)" id="conteudo" name="conteudo"
                class="form-control mb-3">{{postagem.conteudo}}</textarea>


            </br>
            <a href="/admin/postagens">
                <div class="btn btn-danger">Cancelar <i class="fas fa-arrow-circle-left"></i></div>
            </a>
            <button class="btn btn-success">Salvar Postagem <i class="fas fa-file-export ml-2"></i></button>

        </form>


    </div>

</div>